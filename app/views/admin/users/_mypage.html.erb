
<table class='table'>
  <tr>
    <% if user.profile_image.attached? %>
      <%= image_tag user.profile_image, size: "200x200", class: "profile-image" %>
    <% else %>
      <%= image_tag 'no_image.jpg', size: "200x200", class: "profile-image" %>
    <% end %>
  </tr>
  <tr>
	  <th>名前</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>自己紹介</th>
	  <th><%= user.introduction %></th>
  </tr>
</table>

<% if user.is_deleted %>
  <%= link_to "再アクティブ化", reactivate_admin_user_path(user), method: :patch, data: { confirm: "#{user.name}さんをアクティブに戻しますか？" } %>
<% else %>
  <%= link_to "退会させる", withdrawal_admin_user_path(user), method: :patch, class: "btn btn-danger btn-lg mx-2", data: { confirm: "本当に退会させますか？" } %>
<% end %>
