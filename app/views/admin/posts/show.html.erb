
<div class='container'>
  <div class='row'>
    <div class="col-5 mx-auto">
      <h2 class="mb-4">投稿詳細</h2>

      <h2>タイトル</h2>
      <p><%= @post.title %></p>
      <h2>本文</h2>
      <p><%= @post.body %></p>
      <h4>コメント数</h4>
      <p><%= @post.comments.count %></p>

      <div class="d-flex justify-content-between">
        <%= link_to "削除", admin_post_path(@post.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
      </div>

      <div class="mt-3">
        <%= render "admin/favorites/btn", post: @post %>
      </div>
    </div>
  </div>
  
  <div class="comment-section">
    <%= render "admin/comments/index", post: @post %>
  </div>
  
</div>
