
<div class="comments mt-4">
  <div class="row">
    <% post.comments.each do |comment| %>
      <div class="col-12 col-md-10 col-lg-8 mx-auto">
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-md-flex justify-content-between">
              <h5 class="card-title">
                <%= link_to admin_user_path(comment.user), class: "text-primary" do %>
                  <%= comment.user.name %>
                <% end %>
              </h5>
              <small class="text-muted"><%= comment.created_at.strftime("%Y-%m-%d %H:%M") %></small>
            </div>
            
            <p class="card-text mt-2"><%= comment.comment %></p>

            <div class="text-end mt-3">
              <%= link_to "削除", admin_post_comment_path(post, comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
