<div class="comments">
  <% post.comments.each do |comment| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to admin_user_path(comment.user), class: "text-primary" do %>
            <%= comment.user.name %>
          <% end %>
        </h5>
        <p class="card-text"><%= comment.comment %></p>

        <div class="text-end">
          <%= link_to "削除", admin_post_comment_path(post, comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
