
<div class='container'>
  <div class='row'>
    <div class="col-5 mx-auto">
      <h2 class="mb-4">投稿詳細</h2>

      <h2>タイトル</h2>
      <p><%= @post.title %></p>
      <h2>本文</h2>
      <p><%= @post.body %></p>
      <h4>コメント数</h4>
      <p><%= @post.comments.count %></p>
      <% @post_tags.each do |tag| %>
      <%= link_to tag.name,search_tag_posts_path(tag_id: tag.id)%><%="(#{tag.posts.count})" %><% end %>

      <% if @post.user == current_user %>
        <div class="d-flex justify-content-between">
          <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-info" %>
          <%= link_to "削除", post_path(@post.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "favorites/btn", post: @post %>
      </div>
    </div>
  </div>
  
  <div class="comment-section" id="comments-index">
    <%= render "comments/index", post: @post %>
  </div>
  <div class="comment-section mt-3" id="comments-form">
    <%= render "comments/form", post: @post, comment: @comment %>
  </div>
  
</div>
