<div class='container'>
  <div class='row'>
    <div class="col-5 mx-auto">
      <h2 class="text-center my-4">ログイン</h2>

      <%= form_with model: @user, url: user_session_path, local: true, class: "p-4" do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autofocus: true,placeholder: "xxx@gmail.com", autocomplete: "email", class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.submit "ログイン", class: "btn btn btn-info btn-block" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= link_to "アカウントを作成する", new_user_registration_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>