<div class='container'>
  <div class='row'>
    <div class="col-5 mx-auto my-5">
      <h2 class="mb-4">ログイン</h2>

      <%= form_with model: @user, url: user_session_path, local: true, class: "login-form" do |f| %>
        <!-- エラーメッセージ -->
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- メールアドレス -->
        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autofocus: true,placeholder: "xxx@gmail.com", autocomplete: "email", class: "form-control" %>
        </div>

        <!-- パスワード -->
        <div class="form-group">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <!-- ログインボタン -->
        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn btn-info btn-block" %>
        </div>
      <% end %>

      <!-- Deviseのリンク（パスワード忘れなど） -->
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>