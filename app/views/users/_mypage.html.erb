
<table class='table'>
  <tr>
    <% if user.profile_image.attached? %>
      <%= image_tag user.profile_image, size: "200x200", class: "profile-image" %>
    <% else %>
      <%= image_tag 'no_image', size: "200x200", class: "profile-image" %>
    <% end %>
  </tr>
  <tr>
	  <th>名前</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>自己紹介</th>
	  <th><%= user.introduction %></th>
  </tr>
</table>

<% if user_signed_in? && !current_user.guest_user? && user == current_user %>
  <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
<% end %>


<%= link_to "投稿一覧", posts_path(current_user) %>