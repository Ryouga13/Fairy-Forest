
<h1>ユーザー情報編集</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, local: true, mothod: :patch do |f| %>
  <h4>名前</h4>
  <%= f.text_field:name, placeholder: "名前", class: "" %>
  <h4>メールアドレス</h4>
  <%= f.text_area:email, placeholder: "メールアドレス", class: "" %>
  <%= f.submit "更新", class: ""%>
<% end %>